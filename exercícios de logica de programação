exercicio 4:


package revisaoex4;

public class RevisaoEx4 {
//exercicio4
 
    public static void main(String[] args) {
        
        int [] vetorOriginal = {1,2,3,4,5};
        int [] vetorCopia = new int [vetorOriginal.length];
        for (int i = 0; i < vetorOriginal.length; i++)
            vetorCopia[i] = vetorOriginal[i];
        System.out.println("VetorCopia");
        for (int elemento : vetorCopia) {
            System.out.print(elemento + " ");
            System.out.println();

        }
    }
    
}

exercicio 5:


package revisaoex5;

public class RevisaoEX5 {

    
    public static void main(String[] args) {
     
        int [] vetor1 = {1,2,3,4,5};
        int [] vetor2 = {1,2,3,4,5};
        boolean saoIguais = true;
        
        if (vetor1.length != vetor2.length) {
        saoIguais = false;
        }else{
            for (int i = 0; i <vetor1.length; i++) {
             if (vetor1[i] != vetor2 [i])   {
            saoIguais = false;
            break;
             }
             if (saoIguais) {
            System.out.println("Os vetores sao iguais.");
                
            }else{
                System.out.println("Os vetores nao sao iguais");
     
                    }
    }
        } 
    
}
}


