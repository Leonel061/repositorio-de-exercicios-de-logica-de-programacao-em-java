package exercicio8;

import java.util.Arrays;



public class Exercicio8 {
//exercicio8

    public static void main(String[] args) {
 
    int [] vetor = {1,2,3,4,5};
    
        int elementoParaRemover = 3;
        System.out.println("vetor original :" + Arrays.toString(vetor));
       
        
        System.out.println("vetor pos remocao:" + Arrays.toString(vetor));
     
        int indice = -1;
        for (int i = 0; 1 < vetor.length; i++){
        if (vetor[i] == elementoParaRemover) {
        indice = i;
        break;
        }
    }
    
}
}



