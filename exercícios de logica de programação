package revisaoex6;

import java.util.Arrays;

public class RevisaoEX6 {
   
    public static void main(String[] args) {
     int [] vetor = {1,2,3,4,5};
        
        System.out.println("vetor original :" + Arrays.toString(vetor));
        int tamanho = vetor.length;
        for (int i = 0; i <tamanho /2; i++){
        int temp = vetor.length;    
        vetor[i] = vetor[tamanho - 1 - 1];
        vetor[tamanho - 1 - 1] = temp;
        
            System.out.println("vetor invertido " + Arrays.toString(vetor));
        
    }
    
}
}

exercicio 7:



package revisaoex7;

public class RevisaoEX7 {

    public static void main(String[] args) {

       int [] vetor = {1,2,3,4,5};
       int pares = 0;
       int impares = 0;
       for (int num : vetor) {
        if (num % 2 == 0) {
         pares++;
        }else{
            impares++;
            System.out.println("quantidade de elementos pares: " + pares);
        System.out.println("quantidade de elementos impares: " + impares);
        
       }
    }
    }
    
}


